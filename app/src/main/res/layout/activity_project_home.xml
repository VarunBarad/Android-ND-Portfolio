<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProjectHome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="My Nanodegree Apps" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_project_spotify"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:text="@string/title_project_1"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_project_scores"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:text="@string/title_project_2"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_project_library"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:text="@string/title_project_3"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_project_gradle"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:text="@string/title_project_4"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_project_reader"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:text="@string/title_project_5"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_project_capstone"
                android:layout_height="75dp"
                android:layout_width="fill_parent"
                android:background="@color/Orange900"
                android:textColor="@color/White"
                android:text="@string/title_project_capstone"
                android:onClick="onClick" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
